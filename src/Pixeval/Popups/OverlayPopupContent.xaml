<UserControl x:Class="Pixeval.Popups.OverlayPopupContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Loaded="OverlayPopupContent_OnLoaded"
             mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <ThemeShadow x:Name="PopupContentShadow" />
        </Grid.Resources>
        <Grid x:Name="ShadowReceiver"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
              Opacity="0.4" />
        <Grid x:Name="PopupContentPresenter"
              Shadow="{StaticResource PopupContentShadow}"
              Translation="0,0,100" />
    </Grid>
</UserControl>
