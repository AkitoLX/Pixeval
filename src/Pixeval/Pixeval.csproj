  <ItemGroup>
    <PackageReference Include="CommunityToolkit.WinUI.UI.Animations" Version="7.0.3" />
    <PackageReference Include="CommunityToolkit.WinUI.UI.Controls" Version="7.0.3" />
    <PackageReference Include="CommunityToolkit.WinUI.UI.Media" Version="7.0.3" />
    <PackageReference Include="Magick.NET-Q16-AnyCPU" Version="8.2.1" />
    <PackageReference Include="Mako" Version="1.2.0" />
    <PackageReference Include="Microsoft.IO.RecyclableMemoryStream" Version="2.1.3" />
    <PackageReference Include="Microsoft.ProjectReunion" Version="0.8.1" />
    <PackageReference Include="Microsoft.ProjectReunion.Foundation" Version="0.8.1" />
    <PackageReference Include="Microsoft.ProjectReunion.WinUI" Version="0.8.1" />
    <PackageReference Include="Microsoft.Toolkit.Diagnostics" Version="7.0.2" />
    <PackageReference Include="Microsoft.Toolkit.Mvvm" Version="7.1.0-preview1" />
    <PackageReference Include="Microsoft.Toolkit.Uwp.Notifications" Version="7.1.0-preview1" />
    <PackageReference Include="Microsoft.Win32.Registry" Version="6.0.0-preview.5.21301.5" />
    <PackageReference Include="Microsoft.Xaml.Behaviors.WinUI.Managed" Version="2.0.4" />
    <PackageReference Include="PInvoke.User32" Version="0.7.104" />
    <PackageReference Include="ReverseMarkdown" Version="3.19.0" />
    <PackageReference Include="System.Linq.Async" Version="5.0.0" />
    <Manifest Include="$(ApplicationManifest)" />
  </ItemGroup>

  <!-- region Exposes PRI resources to the source generator -->

  <Target Name="InjectAdditionalFiles" BeforeTargets="GenerateMSBuildEditorConfigFileShouldRun">
    <ItemGroup>
      <AdditionalFiles Include="@(PRIResource)" SourceItemGroup="PRIResource" />
    </ItemGroup>
  </Target>

  <ItemGroup>
    <CompilerVisibleItemMetadata Include="AdditionalFiles" MetadataName="SourceItemGroup" />
  </ItemGroup>

  <!-- endregion Exposes PRI resources to the source generator -->

	<Target Name="PackageLoginProxy" BeforeTargets="PrepareForBuild">
		<PropertyGroup>
			<LoginProxyAssetsPath>$(MSBuildProjectDirectory)\Assets\Binary\Pixeval.LoginProxy.zip</LoginProxyAssetsPath>
      <LoginProxyPublishDir>$(TEMP)\LoginProxy</LoginProxyPublishDir>
      <LoginProxyPublishConfiguration>Release</LoginProxyPublishConfiguration>
      <LoginProxyPublishPlatform>Any CPU</LoginProxyPublishPlatform>
      <LoginProxyPublishProtocol>FileSystem</LoginProxyPublishProtocol>
      <LoginProxyPublishTargetFramework>net5.0-windows</LoginProxyPublishTargetFramework>
      <LoginProxyPublishSelfContained>false</LoginProxyPublishSelfContained>
    </PropertyGroup>
		<RemoveDir Directories="$(LoginProxyPublishDir)"></RemoveDir>
		<MSBuild Projects="$(MSBuildProjectDirectory)\..\Pixeval.LoginProxy\Pixeval.LoginProxy.csproj" Targets="publish" Properties="Configuration=$(LoginProxyPublishConfiguration);Platform=$(LoginProxyPublishPlatform);PublishDir=$(LoginProxyPublishDir);PublishProtocol=$(LoginProxyPublishProtocol);TargetFramework=$(LoginProxyPublishTargetFramework);SelfContained=$(LoginProxyPublishSelfContained);" />
		<Delete Files="$(LoginProxyAssetsPath)"></Delete>
		<MakeDir Directories="$(MSBuildProjectDirectory)\Assets\Binary"></MakeDir>
		<ZipDirectory DestinationFile="$(LoginProxyAssetsPath)" SourceDirectory="$(LoginProxyPublishDir)"></ZipDirectory>
    <RemoveDir Directories="$(LoginProxyPublishDir)"></RemoveDir>
  </Target>

  <ItemGroup>
    <ProjectReference Include="..\Pixeval.SourceGen\Pixeval.SourceGen.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>

