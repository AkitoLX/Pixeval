<Page
    x:Class="Pixeval.Pages.RecommendsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="using:Pixeval.UserControls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <CommandBar Visibility="Collapsed"/>
        <Pivot>
            <Pivot.RightHeader>
                <CommandBar Visibility="{x:Bind IllustrationGrid.ViewModel.IsAnyIllustrationSelected, Mode=OneWay}" VerticalAlignment="Bottom" DefaultLabelPosition="Right" Background="Transparent">
                    <AppBarButton Icon="Add" Label="Add"/>
                    <AppBarButton Icon="Edit" Label="Edit"/>
                    <AppBarButton Icon="Share" Label="Share"/>
                </CommandBar>
            </Pivot.RightHeader>
            <PivotItem Header="私人收藏">
                <userControls:IllustrationGrid x:Name="IllustrationGrid" />
            </PivotItem>
            <PivotItem Header="公开收藏" />
        </Pivot>
    </Grid>
</Page>
