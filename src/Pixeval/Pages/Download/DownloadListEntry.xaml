<UserControl x:Class="Pixeval.Pages.Download.DownloadListEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:Pixeval.Util.UI"
             SizeChanged="DownloadListEntry_OnSizeChanged"
             mc:Ignorable="d">
    <UserControl.Resources>
        <!--  ReSharper disable once Xaml.RedundantResource  -->
        <Visibility x:Key="AppBarButtonHasFlyoutChevronVisibility">Collapsed</Visibility>
    </UserControl.Resources>
    <Grid Padding="10"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Center">
        <Grid Margin="0,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="ImageColumn"
                                  Width="60" />
                <ColumnDefinition x:Name="CaptionColumn"
                                  Width="*" />
                <ColumnDefinition x:Name="ProgressColumn"
                                  Width="5*" />
                <ColumnDefinition x:Name="ButtonColumn"
                                  Width="130" />
                <ColumnDefinition x:Name="OptionColumn"
                                  Width="45" />
            </Grid.ColumnDefinitions>
            <Border x:Name="ThumbnailImageContainer"
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Grid.Column="0"
                    Width="50"
                    Height="50"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    CornerRadius="5">
                <Grid>
                    <ProgressRing Width="35"
                                  Height="35"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />
                    <Image x:Name="ThumbnailImage"
                           Stretch="UniformToFill" />
                </Grid>
            </Border>
            <StackPanel x:Name="CaptionContainer"
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Spacing="1">
                <TextBlock MaxWidth="250"
                           FontSize="13"
                           Text="{x:Bind Title, Mode=OneWay}"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="NoWrap" />
                <TextBlock MaxWidth="250"
                           FontSize="{StaticResource PixevalSubscriptFontSize}"
                           Foreground="{ThemeResource PixevalTipTextForeground}"
                           Text="{x:Bind Description, Mode=OneWay}"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="NoWrap" />
            </StackPanel>
            <StackPanel x:Name="ProgressBarContainer"
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Grid.Column="2"
                        Margin="0,5,50,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Spacing="5">
                <ProgressBar x:Name="DownloadProgressBar"
                             HorizontalAlignment="Stretch"
                             Value="{x:Bind Progress, Mode=OneWay}" />
                <TextBlock x:Name="ProgressMessageTextBlock"
                           FontSize="{StaticResource PixevalSubscriptFontSize}"
                           Foreground="{ThemeResource PixevalTipTextForeground}"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="NoWrap" />
            </StackPanel>
            <Button x:Name="ActionButton"
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Grid.Column="3"
                    Width="120"
                    HorizontalAlignment="Center"
                    Content="{x:Bind ActionButtonContent, Mode=OneWay}"
                    Tapped="ActionButton_OnTapped" />
            <AppBarButton x:Name="MoreOptionButton"
                          Grid.Row="0"
                          Grid.RowSpan="3"
                          Grid.Column="4"
                          Width="45"
                          Height="45"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Icon="{ui:FontIcon Glyph=MoreE712}"
                          IsCompact="True"
                          LabelPosition="Collapsed">
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Name="CancelDownloadItem"
                                        x:Uid="/DownloadListEntry/CancelDownloadItem"
                                        Icon="{ui:FontIcon Glyph=CancelE711}"
                                        IsEnabled="{x:Bind IsCancelItemEnabled, Mode=OneWay}"
                                        Tapped="CancelDownloadItem_OnTapped" />
                        <MenuFlyoutItem x:Uid="/DownloadListEntry/OpenDownloadLocationItem"
                                        Icon="{ui:FontIcon Glyph=OpenFolderHorizontalED25}"
                                        Tapped="OpenDownloadLocationItem_OnTapped" />
                        <MenuFlyoutItem x:Uid="/DownloadListEntry/RemoveFromListItem"
                                        Icon="{ui:FontIcon Glyph=RemoveFromECC9}"
                                        Tapped="RemoveFromListItem_OnTapped" />
                        <MenuFlyoutItem x:Uid="/DownloadListEntry/GoToPageItem"
                                        Icon="{ui:FontIcon Glyph=SlideshowE786}"
                                        Tapped="GoToPageItem_OnTapped" />
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
        </Grid>
    </Grid>
</UserControl>