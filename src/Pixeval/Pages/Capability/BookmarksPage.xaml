<ui:EnhancedPage x:Class="Pixeval.Pages.Capability.BookmarksPage"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mako="using:Mako.Global.Enum"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:options="using:Pixeval.Options"
                   xmlns:userControls="using:Pixeval.UserControls"
                   xmlns:ui="using:Pixeval.Util.UI"
                   xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
                   Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                   Loaded="BookmarksPage_OnLoaded"
                   mc:Ignorable="d">
    <controls:DockPanel>
        <controls:DockPanel controls:DockPanel.Dock="Top">
            <CommandBar controls:DockPanel.Dock="Left"
                        HorizontalContentAlignment="Center"
                        Background="Transparent"
                        DefaultLabelPosition="Right"
                        Margin="5,0,0,0">
                <AppBarElementContainer VerticalContentAlignment="Center">
                    <ComboBox x:Name="PrivacyPolicyComboBox"
                              x:Uid="/BookmarksPage/PrivacyPolicyComboBox"
                              SelectionChanged="PrivacyPolicyComboBox_OnSelectionChanged">
                        <ComboBox.Items>
                            <ComboBoxItem x:Name="PrivacyPolicyComboBoxPublicItem"
                                          x:Uid="/BookmarksPage/PrivacyPolicyComboBoxPublicComboBoxItem"
                                          Tag="{x:Bind mako:PrivacyPolicy.Public}" />
                            <ComboBoxItem x:Uid="/BookmarksPage/PrivacyPolicyComboBoxPrivateComboBoxItem"
                                          Tag="{x:Bind mako:PrivacyPolicy.Private}" />
                        </ComboBox.Items>
                    </ComboBox>
                </AppBarElementContainer>
                <AppBarElementContainer VerticalContentAlignment="Center"
                                        Margin="10,0,0,0">
                    <ComboBox x:Name="SortOptionComboBox"
                              x:Uid="/Misc/SortOptionComboBox"
                              ItemsSource="{x:Bind options:IllustrationSortOptionWrapper.AvailableOptions()}"
                              SelectionChanged="SortOptionComboBox_OnSelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="options:IllustrationSortOptionWrapper">
                                <TextBlock Text="{x:Bind LocalizedString}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </AppBarElementContainer>
            </CommandBar>
            <userControls:IllustrationGridCommandBar HorizontalAlignment="Stretch"
                                                     IsDefaultCommandsEnabled="{x:Bind IllustrationGrid.ViewModel.IsAnyIllustrationSelected, Mode=OneWay}"
                                                     ViewModel="{x:Bind IllustrationGrid.ViewModel}"/>
        </controls:DockPanel>
        <userControls:IllustrationGrid x:Name="IllustrationGrid" />
    </controls:DockPanel>
</ui:EnhancedPage>