<ui:EnhancedPage x:Class="Pixeval.Pages.Capability.RecommendationPage"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mako="using:Mako.Global.Enum"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:options="using:Pixeval.Options"
                 xmlns:ui="using:Pixeval.Util.UI"
                 xmlns:userControls="using:Pixeval.UserControls"
                 Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                 Loaded="RecommendationsPage_OnLoaded"
                 mc:Ignorable="d">
    <Grid>
        <userControls:IllustrationGridCommandBar HorizontalAlignment="Stretch"
                                                 IsDefaultCommandsEnabled="{x:Bind IllustrationGrid.ViewModel.IsAnyIllustrationSelected, Mode=OneWay}"
                                                 ViewModel="{x:Bind IllustrationGrid.ViewModel}">
            <userControls:IllustrationGridCommandBar.CommandBarContent>
                <StackPanel Margin="10,5,0,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <ComboBox x:Name="ModeSelectionComboBox"
                              x:Uid="/RecommendationsPage/ModeSelectionComboBox"
                              SelectionChanged="ModeSelectionComboBox_OnSelectionChanged">
                        <ComboBox.Items>
                            <ComboBoxItem x:Name="ModeSelectionComboBoxIllustComboBoxItem"
                                          x:Uid="/RecommendationsPage/ModeSelectionComboBoxIllustComboBoxItem"
                                          Tag="{x:Bind mako:RecommendContentType.Illust}" />
                            <ComboBoxItem x:Uid="/RecommendationsPage/ModeSelectionComboBoxMangaComboBoxItem"
                                          Tag="{x:Bind mako:RecommendContentType.Manga}" />
                        </ComboBox.Items>
                    </ComboBox>

                    <ComboBox x:Name="SortOptionComboBox"
                              x:Uid="/Misc/SortOptionComboBox"
                              Margin="10,0,0,0"
                              ItemsSource="{x:Bind options:IllustrationSortOptionWrapper.Available}"
                              SelectionChanged="SortOptionComboBox_OnSelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="options:IllustrationSortOptionWrapper">
                                <TextBlock Text="{x:Bind LocalizedString}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </userControls:IllustrationGridCommandBar.CommandBarContent>
        </userControls:IllustrationGridCommandBar>
        <userControls:IllustrationGrid x:Name="IllustrationGrid"
                                       Margin="0,40,0,0" />
    </Grid>
</ui:EnhancedPage>
