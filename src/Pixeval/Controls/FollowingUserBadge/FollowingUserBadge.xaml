<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pixeval.Controls.FollowingUserBadge">
    <Style TargetType="local:FollowingUserBadge">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:FollowingUserBadge">
                    <Grid
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        VerticalAlignment="Center"
                        Background="Crimson"
                        CornerRadius="5">
                        <TextBlock
                            x:Uid="/FollowingUserBadge/FollowingTextBlock"
                            Margin="2"
                            FontSize="7"
                            Foreground="White" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
