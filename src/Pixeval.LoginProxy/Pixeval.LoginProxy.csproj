<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net5.0-windows</TargetFramework>
		<UseWPF>true</UseWPF>
		<Nullable>enable</Nullable>
		<AssemblyName>Pixeval.LoginProxy</AssemblyName>
		<RuntimeIdentifiers>win10-x86;win10-x64;win10-arm64</RuntimeIdentifiers>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="Assets\Certs\pixeval_server_cert.pfx" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Web.WebView2" Version="1.0.705.50" />
	</ItemGroup>

	<ItemGroup>
		<Resource Include="Assets\Certs\pixeval_server_cert.pfx" />
	</ItemGroup>
</Project>
